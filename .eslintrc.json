{
  "extends": [
    "plugin:additional/recommended",
    "plugin:prettier/recommended",
    // "plugin:react/recommended", // eslint-plugin-react
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended"
  ],
  "plugins": [
    "additional",
    "prettier",
    // "react",
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "es2017": true
  }
}

// npm i eslint eslint-plugin-additional prettier eslint-plugin-prettier eslint-config-prettier typescript @typescript-eslint/parser @typescript-eslint/eslint-plugin --save-dev
